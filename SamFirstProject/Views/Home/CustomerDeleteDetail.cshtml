@using SamFirstProject.Models
@model Customer
@{
    ViewBag.Title = "CustomerDeleteDetail";
}

<h2>Müşteri Silme</h2>
<br />
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="exampleInputEmail1" class="control-label col-md-3">Id : </label>
        <div class="col-md-9">
            @Html.TextBox("Id", Model.Id, new { @class = "form-control ", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" class="control-label col-md-3">Ad : </label>
        <div class="col-md-9">
            @Html.TextBox("FirstName", Model.FirstName, new { @class = "form-control ", @readonly = "readonly" })
        </div>
    </div>



    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Soyad : </label>
        <div class="col-md-9">
            @Html.TextBox("LastName", Model.LastName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Telefon : </label>
        <div class="col-md-9">
            @Html.TextBox("PhoneNumber", Model.PhoneNumber, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Adres : </label>
        <div class="col-md-9">
            @Html.TextArea("Address", Model.Address, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Arıza Sebebi : </label>
        <div class="col-md-9">
            @Html.TextBox("FaultReason", Model.FaultReason, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Kullanılan Malzeme : </label>
        <div class="col-md-9">
            @Html.TextBox("UsedMaterial", Model.UsedMaterial, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="control-label col-md-3">Açıklama : </label>
        <div class="col-md-9">
            @Html.TextArea("Explanation", Model.Explanation, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <h2>&nbsp;</h2>
    <div style="display:flex;align-items:center;justify-content:center" class="form-group">

        <button type="submit" class="btn btn-primary"><a style="color:white" href="~/Home/CustomerDelete/@Model.Id">SİL</a></button>
        

    </div>

}






